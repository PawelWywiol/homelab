# Webhook Service Configuration
# Copy this file to .env and configure your values

# GitHub webhook secret (generate with: openssl rand -hex 32)
# IMPORTANT: Must match the secret configured in GitHub webhook settings
# Should be stored in Ansible Vault at: ansible/group_vars/all/vault.yml
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# Repository path (where homelab code is cloned)
REPO_PATH=/home/code/home

# Semaphore directory (for config access)
SEMAPHORE_DIR=/opt/semaphore

# Semaphore API configuration
SEMAPHORE_URL=http://localhost:3001
SEMAPHORE_API_TOKEN=your-semaphore-api-token-here

# Semaphore project/template IDs (configure after Semaphore setup)
# Get these from Semaphore UI after creating projects/templates
SEMAPHORE_PROJECT_ID=1
SEMAPHORE_TEMPLATE_X202=1
SEMAPHORE_TEMPLATE_X201=2
SEMAPHORE_TEMPLATE_ANSIBLE_CHECK=3

# OpenTofu configuration
TOFU_AUTO_APPLY=false  # Set to true for automatic infrastructure updates (NOT RECOMMENDED)
TOFU_WORKING_DIR=/home/code/home/infra/tofu

# Notification settings (ntfy.sh)
NTFY_ENABLED=true
NTFY_URL=https://ntfy.sh
NTFY_TOPIC=homelab-webhooks

# Container user/group IDs
UID=1000
GID=1000

# Timezone
TIMEZONE=Europe/Warsaw

# Logging
LOG_LEVEL=info  # debug, info, warn, error
