# Webhook Service Configuration
# Copy this file to .env and configure your values
#
# Architecture: Webhook container SSHes to localhost to run host scripts
#
# Prerequisites:
#   - SSH key at ~/.ssh/ansible_ed25519 (mounted into container)
#   - Host public key in ~/.ssh/authorized_keys
#   - Host in ~/.ssh/known_hosts
#

# GitHub webhook secret (generate with: openssl rand -hex 32)
# IMPORTANT: Must match the secret configured in GitHub webhook settings
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# SSH configuration for connecting to host
# host.docker.internal resolves to host machine from container
SSH_HOST=host.docker.internal
SSH_USER=code

# OpenTofu configuration
TOFU_AUTO_APPLY=false  # Set to true for automatic infrastructure updates (NOT RECOMMENDED)

# Discord notification settings
# Create webhook: Server Settings → Integrations → Webhooks → New Webhook
DISCORD_ENABLED=true
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Timezone
TIMEZONE=Europe/Warsaw

# Logging
LOG_LEVEL=info  # debug, info, warn, error
